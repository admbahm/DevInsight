# This is the top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf          # Use Linux-style line endings
insert_final_newline = true    # Add empty line at end of files
charset = utf-8           # Use UTF-8 encoding
trim_trailing_whitespace = true    # Remove trailing spaces

# Rust-specific settings
[*.rs]
indent_style = space      # Use spaces for indentation
indent_size = 4          # Use 4 spaces per indentation level

# Config file settings
[*.{yml,yaml,json}]
indent_style = space      # Use spaces for indentation
indent_size = 2          # Use 2 spaces for config files 